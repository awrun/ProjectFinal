@page
@model ProjectFinal.Pages.Holidays.AddModel
@{
}
<h3>Add New</h3>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.description "></label>
        <input asp-for="@Model.description" class="form-control" />
    </div>
     <div class="form-group">
        <label asp-for="@Model.date"></label>
        <input asp-for="@Model.date" class="form-control" />
    </div>
     
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="row gx-0">
        <button type="submit" class="col btn btn-success me-2">Save</button>
        <a href="/Holidays/List" class="col btn btn-default border-secondary ms-2" role="button">Cancel</a>
    </div>
</form>