@page
@model ProjectFinal.Pages.Customers.ListModel
@{
}
<form method="post" class="shadow">
    <div class="row">
        <div class="col-sm-10"><h3>Customers</h3></div>
        <div class="col-sm-2">
            <a href="/Customers/Add" class="btn btn-primary rounded" role="button">
                <i class="fa fa-add"></i>
              Add  
            </a>
        </div>
    </div>
    <br />
 <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="input-group">
                <input class="form-control border rounded-pill"
                       type="search" placeholder="type search text" id="example-search-input"
                       asp-for="@Model.SearchText">
                <span class="input-group-append">
                    <button class="btn btn-outline-primary bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Search">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-outline-dark bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Clear">
                        <i class="fa fa-remove"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>

<div class=form-group>
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
         <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <br/>

<table class="table">
    <thed>
        <tr>
            <th scope="col">Customer Id</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Gender</th>
            <th scope="col">DOB</th>
            <th scope="col">Mobile Number</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">PinCode</th>
            <th scope="col">Actions</th>
           
        </tr>
    </thed>
    <tbody>
            @if(Model.Customers==null || Model.Customers.Count<0)
            {
                <tr>
                    <td colspan=10>No Students Found</td>
                </tr>
            }
            else
            {

            @foreach(var d in Model.Customers)
             {
            <tr>
                <td>@d.customerid</td>
                <td>@d.customername</td>
                <td>@d.gender</td>
                <td>@d.dob.ToString("dd-MMM-yyyy")</td>
                 <td>@d.mobilenumber</td>
                 <td>@d.address</td>
                 <td>@d.city</td>
                 <td>@d.state</td>
                 <td>@d.pincode</td>
                 
                  <td>
                     <a href="/Customers/Edit/@d.customerid" class="btn btn-outline-warning" role="button">
                            <i class="fa fa-edit"></i>
                        </a>
                        
                </td>
           </tr>
        }

        }

    </tbody>
    
</table>
</form>